	    <record id="helpdesk_ticket_view_form_ba" model="ir.ui.view" >
	        <field name="name">helpdesk.ticket.form.ba</field>
	        <field name="model">helpdesk.ticket</field>
	        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form" />
	        <field name="arch" type="xml">
                <field name="team_id" position="replace" >
                    <field name="team_id" string="Equipo Mesa de Servicio" />
	        	</field>
	            <field name="partner_id" position="replace">
	            	<field name="punto_de_venta" />
	                <field name="partner_id" string="Solicitante"  class="field_partner_id" domain="['|', ('company_id', '=', False), ('company_id', '=', company_id)]" widget="res_partner_many2one" />
	            </field>
	            <field name="partner_name" position="replace" >
	            	<field name="partner_name" string="Nombre Solicitante" attrs="{'invisible': [('partner_id', '!=', False)]}" />
	            </field>
                <field name="tag_ids" position="replace" >
                    <field name="tag_ids" string="Categorías" domain="[('team_id', '=', team_id)]" attrs="{'readonly': [('team_id', '=', False)]}" />
                    <field name="tag_ba_ids" string="Sub Categorías" domain="[('tag_id', '=', tag_ids)]" attrs="{'readonly': [('team_id', '=', False)]}" />
                    <field name="task_related_id" string="Tarea relacionada" attrs="{'readonly': [('user_id', '=', False)]}" domain="[('user_id', '=', user_id)]"/>
                </field>
	        </field>
	    </record>

        <record id="helpdesk_team_view_form_ba" model="ir.ui.view" >
            <field name="name">helpdesk.team.form.ba</field>
            <field name="model">helpdesk.team</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_team_view_form" />
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="project_related_id"/>
                </field>
            </field>
        </record>

	    <record id="helpdesk_tag_view_tree_ba" model="ir.ui.view" >
	        <field name="name">helpdesk.tag.form.ba</field>
	        <field name="model">helpdesk.tag</field>
	        <field name="inherit_id" ref="helpdesk.helpdesk_tag_view_tree" />
	        <field name="arch" type="xml">
	            <field name="name" position="after">
	                <field name="team_id" required="1"/>
	            </field>
	        </field>
	    </record>

