    <record id="helpdesk_subtag_action" model="ir.actions.act_window">
        <field name="name">Sub Categorías</field>
        <field name="res_model">helpdesk.tag.ba</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            No hay sub categorias creadas, crea una!
          </p><p>
            Sub categorias se utilizan para categorizar los serivicos de mesa de ayuda.
          </p>
        </field>
    </record>

    <menuitem id="helpdesk_sub_menu_cat" name="Sub Categorías"
        sequence="3" parent="helpdesk.helpdesk_menu_config"
        groups="helpdesk.group_helpdesk_manager" action="helpdesk_subtag_action" />

