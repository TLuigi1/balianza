<?xml version="1.0"?>
<odoo>
    <record id="view_product_template_custom_ba" model="ir.ui.view">
        <field name="name">product.template.model.custom</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
             <div name="options" position="inside">
                <div>
                    <field name="vehicle_complement"/>
                    <label for="vehicle_complement"/>
                </div>
             </div>
        </field>
    </record>


    <record id="product_template_action_vehicle_ba" model="ir.actions.act_window">
        <field name="name">Insumos automotrices</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{"vehicle_complement": True}</field>
        <field name="domain">[('vehicle_complement', '=', True)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Insumos no encontrados, aqu√≠ puedes crearlos!
            </p><p>
                Realice un seguimiento de las cantidades en stock creando sus insumos.
            </p>
        </field>
    </record>
</odoo>